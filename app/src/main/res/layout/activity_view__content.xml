<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewContentParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View_Content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp">
        <Button
            android:id="@+id/viewContenteBackButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="BackButtonViewContent"
            android:gravity="left"
            android:background="@drawable/back_button_white"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Srujanee Odia"
                android:layout_marginTop="10dp"
                android:id="@+id/mainAppName"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/white"
                android:paddingRight="50dp"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
            <TextView
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewEditPost"
                android:onClick="editPost"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:background="@drawable/edit_white">
            </TextView>
            <TextView
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="deletePost"
                android:id="@+id/viewDeletePost"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:background="@drawable/delete_white">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/viewBookmark"
                android:onClick="bookmark"
                android:background="@drawable/ic_baseline_bookmark_border_24"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/white"
                android:textSize="35dp"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
 <!--<androidx.recyclerview.widget.RecyclerView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingTop="?attr/actionBarSize"
     android:id="@+id/viewRecycler"></androidx.recyclerview.widget.RecyclerView> -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/horizontalMainActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etViewContentTitleEdit"
                        android:layout_width="wrap_content"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="left"
                        android:text="Test The Feature"
                        android:textSize="30dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        style="@style/TextAppearance.AppCompat" />
                    <TextView
                        android:id="@+id/viewTextViewTitle"
                        style="@style/TextAppearance.AppCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="7"
                        android:layout_alignParentLeft="true"
                        android:text="Test The Feature"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textSize="30dp" />
                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:textSize="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/follow_black"
                        android:layout_marginRight="5dp"
                        android:id="@+id/viewFollow"
                        android:onClick="viewOpenProfile"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="3dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:id="@+id/viewTextViewAuthor"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/viewShortWritingImage"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerInParent="true"/>
                    <EditText
                        android:id="@+id/etViewTextViewContentEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:focusable="true"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_gravity="left"
                        android:textSize="20dp"
                        android:layout_marginBottom="7dp"
                        android:text="It Is Working"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <ProgressBar
                        android:id= "@+id/viewProgressBar"
                        android:layout_width= "35dp"
                        android:layout_height= "35dp"
                        android:layout_centerInParent= "true"
                        android:background= "@drawable/circular_shape"
                        android:indeterminate= "true"
                        android:visibility="gone"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@color/orange"
                        android:max= "100"
                        android:progress= "65"
                        android:progressDrawable= "@drawable/progress_bar" />
                    <TextView
                        android:id="@+id/viewTextViewContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_gravity="left"
                        android:textSize="20dp"
                        android:layout_marginBottom="7dp"
                        android:text="It Is Working"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="70dp"
                        android:id="@+id/viewLinearReactionContainer"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/reaction"
                            android:shadowColor="@color/flag"
                            android:freezesText="false"
                            android:textAlignment="center"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:onClick="reactionRelation"
                            android:id="@+id/viewReaction"
                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:id="@+id/viewReactionCount"
                            ></TextView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:onClick="sharePost"
                        android:background="@drawable/share_option">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>