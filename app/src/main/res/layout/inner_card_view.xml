<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="https://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:id="@+id/innerCardViewLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/innerTopicOuter"
                android:visibility="gone"></TextView>

            <TextView
                android:id="@+id/innerHeader"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/carrois_gothic_sc"></TextView>
           <TextView
                android:id="@+id/innerImageViewUnderLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/EditBrown"></TextView>
            <ImageView
                android:layout_width="135dp"
                android:layout_height="180dp"
                android:layout_marginTop="3dp"
                android:paddingRight="2dp"
                android:paddingLeft="1dp"
                android:paddingBottom="2dp"
                android:scaleType="fitXY"
                android:id="@+id/innerImageView"
                android:src="@mipmap/poetry_long"/>

            <TextView
                android:id="@+id/innerTrendingContent"
                android:layout_width="250dp"
                android:layout_height="130dp"
                android:fontFamily="@font/aref_ruqaa"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>